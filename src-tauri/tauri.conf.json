{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hos-installer",
  "version": "0.1.0",
  "identifier": "com.amh.hos-installer",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "鸿蒙测试应用安装器",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png"],
    "externalBin": ["binaries/hdc"],
    "resources": ["binaries/**/*"]
  }
}
